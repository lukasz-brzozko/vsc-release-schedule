{
  "name": "release-schedule-vsc",
  "displayName": "Release Schedule",
  "description": "Organises release schedule order and generates Slack reminder messages in VSC Panel",
  "author": "Łukasz Brzózko",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Release Schedule",
      "properties": {
        "releaseSchedule.items": {
          "items": [
            {
              "name": "Item 1",
              "enabled": true
            },
            {
              "name": "Item 2",
              "enabled": true
            },
            {
              "name": "Item 3",
              "enabled": true
            },
            {
              "name": "Item 4",
              "enabled": true
            }
          ]
        }
      }
    },
    "commands": [
      {
        "command": "extension.showTreeView",
        "title": "Show Tree View"
      },
      {
        "command": "myTreeView.moveUp",
        "title": "Move Up"
      },
      {
        "command": "myTreeView.moveDown",
        "title": "Move Down"
      },
      {
        "command": "myTreeView.toggleChecked",
        "title": "Toggle Checked"
      },
      {
        "command": "extension.generateReminderFile",
        "title": "Generate reminders"
      },
      {
        "command": "extension.pickDate",
        "title": "Pick a Date"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "myTreeView",
          "name": "Podgrywki"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "myTreeView.toggleChecked",
          "when": "view == myTreeView",
          "group": "navigation"
        },
        {
          "command": "myTreeView.moveUp",
          "when": "view == myTreeView",
          "group": "2_workspace"
        },
        {
          "command": "myTreeView.moveDown",
          "when": "view == myTreeView",
          "group": "2_workspace"
        }
      ],
      "view/title": [
        {
          "command": "extension.generateReminderFile",
          "when": "view == myTreeView",
          "group": "navigation"
        },
        {
          "command": "extension.pickDate",
          "when": "view == myTreeView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "moment": "^2.30.1"
  }
}
